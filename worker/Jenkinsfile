pipeline {
    agent any

    tools{
        maven 'maven 3.6.1'
    }
    stages{
        stage('build'){
            steps{
                echo 'compiling worker app'
                dir('worker'){
                 sh 'mvn compile'   
                }
            }

        }
        stage('test'){
            steps{
                echo "Running unit Test on worker app.."
                    dir('worker'){
                       sh 'mvn clean test'
                }
            }
        }
        stage('package'){
            steps{
                echo 'packaging worker app'
                dir('worker'){
                   sh 'mvn package'
                }
            }
        }
    }
    post{
        always{
            echo 'Building Multibranch pipeline for worker app is completed'
        }
    }
}
